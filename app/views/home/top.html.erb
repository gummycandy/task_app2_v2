<body>
  <div class="top">
    <div class="top-main">
      <div class="container">
        <div class="row col-lg-6">
          <div class="form-fream">
            <div class="form-area">
              <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
              <%= form_with url: "/" do |f| %>
                <label for="___">エリア</label>
                <%= f.text_field :area, class:"form-control mb-4", placeholder:"東京" %>
                <%= f.submit :commit, value:"探す", class:"form-control btn-primary mb-4"  %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="panel-area m-5">
        <h1 class="section-title">おすすめのエリア</h1>
          <div class="row">
            <div class="panel-item col-lg-3 col-6">
              <span>東京</span>
              <%= link_to image_tag('/assets/img_tokyo.jpg', class: "panel-image"), '/' %>
              <div class="shadow"></div>
            </div>
            <div class="panel-item col-lg-3 col-6">
              <span>大阪</span>
              <%= link_to image_tag('/assets/img_osaka.jpg', class: "panel-image"), '/' %>
              <div class="shadow"></div>
            </div>
            <div class="panel-item col-lg-3 col-6">
              <span>京都</span>
              <%= link_to image_tag('/assets/img_kyoto.jpg', class: "panel-image"), '/' %>
              <div class="shadow"></div>
            </div>
            <div class="panel-item col-lg-3 col-6">
              <span>札幌</span>
              <%= link_to image_tag('/assets/img_sapporo.jpg', class: "panel-image"), '/' %>
              <div class="shadow"></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</body>